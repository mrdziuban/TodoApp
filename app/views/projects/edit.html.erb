<h1>Edit Project</h1>

<form action="<%= projects_url %>" method="post">
  <label for="project_title">Title</label>
  <input type="text" name="project[title]" id="project_title" value="<%= @project.title %>">
  <br>
  <label for="project_description">Description</label>
  <br>
  <textarea name="project[description]" id="project_description" placeholder="Enter description" cols="50" rows="10"><%= @project.description %></textarea>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="put">
  <br>
  <input type="submit" value="Update">
</form>